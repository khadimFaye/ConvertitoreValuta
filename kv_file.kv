<Home>:
    MDBoxLayout:
        orientation:'vertical'
        MDFloatLayout:
            canvas :
                Color:
                    rgb:(1/255,1/255,1/255)
                Rectangle:
                    size : root.width,root.height
                    pos : 0,0

            MDLabel : 
                text :'Convertitore valuta'.title()
                halign : 'center'
                font_style : 'H3'
                font_size : dp(23)
                theme_text_color : 'Custom'
                text_color :'F8F5F7'
                pos_hint : {'center_x':.5,'center_y':.95}
            MDLabel : 
                text :'(@ck.faye)'.title()
                halign : 'center'
                font_style : 'Caption'
                font_size : dp(10)
                theme_text_color : 'Custom'
                text_color :'grey'
                pos_hint : {'center_x':.5,'center_y':.91}
            MDTabs:
                tab_bar_height : dp(30)
                #tab_indicator_type : 'fill'
                #tab_indicator_type : 'round'
                #tab_indicator_type : 'line-round'
                background_color : (1/255,1/255,1/255)
                padding : 15
                indicator_color : 'green'
                anim_threshold : 0.9

                spacing : 10
                id : tabs
                pos_hint : {'top':.89}
                Tab1:
                    id : tab1
                Tab2:
                    id : tab2
                    content_text : 'cadahdjahdjkad'
                    
            

        
        
<Tab1>:
    title: 'Convertitore'.title()
    canvas :
        Color:
            rgb:(1/255,1/255,1/255)
        Rectangle:
            size : root.width,root.height
            pos : 0,0
    
    ################## VALUES INPUTS WIDGETS ##################
    MDGridLayout:
        id : inputs_container
        spacing : 5
        cols : 1
        pos_hint : {'top':.95}
        MDBoxLayout:
            id : box_value
            size_hint : (1,None)
            height : card_value1.height
            pos_hint : {'top':0.90}
            padding : 20
            MDCard:
                id : card_value1
                size_hint  : (1,None)
                height : 120
                radius : [10]
                md_bg_color :(24/255,24/255,24/255)
                pos_hint : {'center_x':0.5,'center_y':.5}
                MDRelativeLayout:
                    size_hint_y : None
                    height : card_value1.height
                    pos_hint : {'center_x':.5,'center_y':.5}
                    MDLabel:
                        id: currency_code0
                
                        text : root.DEFAULT_CURRENCY_CODE0
                        theme_text_color : 'Custom'
                        text_color : 'F8F5F7'
                        font_style : 'H2'
                        font_size : dp(15)
                        halign : 'left'
                        pos: (10,40)

            ################## value 1 input ############Ã  
                    Value1_Input_Field:
                        id : val1
                        on_text_validate: root.convertoValue1_to_Value2(val1)
                    
                    
                    MDIconButton :
                        id : selettore 
                        icon : 'chevron-down'
                        theme_icon_color : 'Custom'
                        icon_color : 'green'
                        icon_size : dp(20)
                        #pos_hint : {'top':.65,'right':.95}
                        pos :(70,80)
                        ripple_alfa :.0
                        ripple_rad : 1
                        ripple_behavior : 0
                        on_press : root.init_lista_delle_valute(self)
    ################## VALUES INPUTS 2  ##################
        MDBoxLayout:
            id : box_value2
            size_hint : (1,None)
            height : card_value2.height
            #pos_hint : {'top':0.48}
            padding : 20
            MDCard:
                id : card_value2
                size_hint  : (1,None)
                height : 120
                radius : [10]
                md_bg_color :(24/255,24/255,24/255)
                pos_hint : {'center_x':0.5,'center_y':.5}
                MDRelativeLayout:
                    size_hint_y : None
                    height : card_value1.height
                    pos_hint : {'center_x':.5,'center_y':.5}
                    MDLabel:
                        id: currency_code1
                    
                        text : root.DEFAULT_CURRENCY_CODE1 
                        theme_text_color : 'Custom'
                        text_color : 'F8F5F7'
                        font_style : 'H2'
                        font_size : dp(15)
                        halign : 'left'
                        pos:(10,40)

                ######### value_2_input ########
                    Value2_Input_Field:
                        id :val2
                        
                    
                        
                    
                    MDIconButton :
                        id : selettore 
                        icon : 'chevron-down'
                        theme_icon_color : 'Custom'
                        icon_color : 'green'
                        icon_size : dp(20)
                        pos :(70,80)
                        ripple_alfa :.0
                        ripple_rad : 1
                        ripple_behavior : 0
                        on_press : root.init_lista_delle_valute(self)
        
    ############### REVERSE BUTTON ###############
    MDCard:
        id : reverse_feature_bg
        size_hint  : (None,None)
        size : 66,66
        radius : [100]
        md_bg_color :(1/255,1/255,1/255)
        pos_hint : {'center_x':.7,'center_y':.74}
    MDCard:
        id : reverse_feature
        size_hint  : (None,None)
        size : 60,60
        radius : [100]
        md_bg_color :(24/255,24/255,24/255)
        pos_hint : reverse_feature_bg.pos_hint
        MDRelativeLayout:
            size_hint_y : None
            height : reverse_feature.height
            pos_hint : {'center_x':.5,'center_y':.5}

            MDIconButton:
                icon : 'swap-vertical'
                icon_size : dp(30)
                theme_icon_color : 'Custom'
                icon_color : 'green'
                pos_hint : {'center_x':.5,'center_y':.5}
                on_press : root.swap_currency()
    ################ TASTIERA ################
    MDBoxLayout:
        MDGridLayout:
            cols : 1
            padding : (16,0,16,-1)
            pos_hint : {'top':.49}
            spacing : 15
            MDGridLayout:
                id : tst
                cols : 3
                size_hint :(1,None)
                height : 150
                spacing : 5 
            ##########  bottoni aggiuntive per la cancellazione e la validazione ###########
            MDFlatButton:
                id : validate
                text : 'Converti'
                size_hint : 1,None
                theme_text_color : 'Custom'
                text_color : 'white'
                height : 50
                md_bg_color : 'green'
               
       


